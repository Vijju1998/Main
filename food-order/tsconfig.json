{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "outDir": "./dist/",
    "rootDir":"src",
    "baseUrl":"./src",
    "paths":{
      "@assets/*":["assets/*"],
      "@pages/*":["pages/*"],
      "@components/*":["components/*"],
      "@test/*":["test/*"],
      "@hooks/*":["hooks/*"]
    }
  },
  "exclude": [
    "./node_modules/**/*"
  ],
  "include": [
    "./src/**/*"
  ]
}
